{
  "manifest_version": 3,
  "name": "Forced Embedded Font",
  "version": "1.1",
  "description": "Force all websites to use a custom embedded font.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Font Control"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["fonts/*.woff2"],
      "matches": ["<all_urls>"]
    }
  ]
}
